<scroll-view scroll-y="true">
    <view wx:for="{{findList}}" wx:for-item="item">
            <view class="graySpace"></view>
            <view class="item-avatar-xs" wx:for="{{item.list_tool}}" wx:for-item="i" data-url="{{i.url}}">
                <image src="{{i.img}}" />
                <view style="padding-left:10px">
                    <text class="name">{{i.name}}</text>
                </view>
            </view>
    </view>
</scroll-view>