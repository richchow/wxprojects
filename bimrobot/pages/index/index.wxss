/**search.wxss**/

.indexBottomSmall {
  background-color: #14b3c7;
  background-size: 100%;
  width: 100%;
  height: 100rpx;
  bottom:0rpx;
  border-top:#ccc 1rpx solid
}
.indexSearchSmall {
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 20rpx;
}

.viewInput {
  border: 1px solid #14b3c7;
  border-radius: 5px;
  background-color: #fff;
  width: 90%;
  height: 60rpx;
}

.indexInput {
  width: 570rpx;
  float: left;
  position: box;
  border-radius: 5px;
  font-size: 26rpx;
  padding-left: 10rpx;
  padding-top:10rpx;
}

.phInput {
  color: #ccc;
}

.btnSearch {
  font-size: 26rpx;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
  align-items: center;
  background-color: #f6b26b;
  float: right;
  width: 90rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
}

.qaview {
  box-sizing: border-box;
  font-size: 28rpx;
  width: 100%;
  padding: 20rpx 40rpx;
  background-color: #f6f6f6;
  height: 1106rpx;
  align-items: center;
  text-align: center;
}

.labtip {
  border: 1rpx solid #14b3c7;
  border-radius: 8px;
  float: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  margin: 15rpx 30rpx;
  color: #14b3c7;
  font-size: 20rpx;
}

.labtitle {
  width: 100%;
  align-items: center;
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.bottomBtn {
  position: fixed;
  background-color: #14b3c7;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  bottom: 0px;
  overflow: hidden;
  z-index: 500;
  width: 100%;
}
.left-Avatar{
    float:left;
    width: 70rpx;
    height: 70rpx;
    margin-right: 6rpx;
    margin-top: 16rpx;
}

.left-Triangle{
    float:left;
    margin-top: 42rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-right:  6px solid #fff;
    border-bottom: 4px solid transparent;
}

.left-message{
    float: left;
    margin-top: 24rpx;
    background: #fff;
    border-radius: 6rpx;
    font-size: 14px;
    letter-spacing: 1px;
    max-width: 180px;
    word-wrap:break-word;
}

.right-Avatar{
    float:right;
    width: 70rpx;
    height: 70rpx;
    margin-left: 6rpx;
    margin-top: 16rpx;
    
}
.right-Triangle{
    float:right;
    margin-top: 42rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-left: 6px solid #5bcd20;
    border-bottom: 4px solid transparent;
}
.right-message{
    float: right;
    margin-top: 22rpx;
    background: #5bcd20;
    border-radius: 6rpx;
    font-size: 14px;
    letter-spacing: 1px;
    color: #333;
    max-width: 180px;
    word-wrap:break-word;
}
.voice {
    width: 50rpx;
    height: 50rpx;
    margin-top: 15rpx;
}
.expression {
    width: 50rpx;
    height: 50rpx;
    margin-top: 15rpx;
}
.add {
    width: 50rpx;
    height: 50rpx;
    margin-top: 15rpx;
}

.send {
    height: 30px;
    line-height: 30px;
    display: inline-block;
    margin-top: 12rpx;
    font-size: 12px;
    padding-left: 15px;
    padding-right: 15px;
    letter-spacing: 2px;
}