.sharebox {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background: #ccc;
  padding-top: 20rpx;
  height: 100%;
  opacity: 0.7;
  filter: alpha(opacity=70);
}

.sharecontent {
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  background: #fffffe;
  padding-top: 20rpx;
  height: 80%;
