}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-name {
  margin-top: 10px;
  font-size: 12px;
}

.info-content {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-title {
  font-size: 18px;
  width: 100%;
  text-align: center;
}

.info-text {
  font-size: 14px;
  color: #ccc;
  text-align: left;
  line-height: 60rpx;
  padding: 10px;
}

