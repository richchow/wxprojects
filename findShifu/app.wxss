@import "/css/WeUI.wxss";

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.weui-cell__hd image {
  margin-right: 5px;
  vertical-align: middle;
  width: 40px;
  height: 40px;
  border-radius: 8rpx;
}

.cell_ft_new {
  color: #14b3c7;
  font-size: 24rpx;
}

.weui-cell::before {
  border-top: none;
}

.weui-cells::after {
  border-bottom: none;
}

.weui-cell_active {
  background-color: #fff;
}

.weui-cells {
  background-color: #fafafa;
  font-size: 26rpx;
}

.weui-panel::after {
  border-bottom:none;

}
.weui-panel__bd image{
  width: 40px;
  height: 40px;
  border-radius: 8rpx;
}

.bg_panel_user {
  border-bottom: 4rpx #fafafa solid;
}
.bg_panel_userimg{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.bg_panel_usercontent{
  font-size: 24rpx;
  padding-left:20rpx;
}
.color_time{
  color:#bfbfbf;
}
.page__bd_spacing2{
  padding-left: 100rpx;
}
.bg_panel_imglist{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: table;
  margin: 0;
}
.bg_panel_imglist_img{
  width:200rpx;
  height:200rpx;
  float: left;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
}
.bg_panel_filelist{
  margin-top: 20rpx;
  background-color: #e6e6e6;
  height:40rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-right:20rpx;
}
.bg_panel_filelist_file{
  width:40rpx;
  height:40rpx;
  float: left;
  padding-right: 20rpx;
  padding-left:20rpx;
  
}
.bottom_qa{
  display: flex;
  flex-direction: row;
  border-top:#e6e6e6 2rpx solid;
  border-bottom:#e6e6e6 2rpx solid;
}
.bottom_qa_button{
  width: 50rpx;
  height:50rpx;
  flex: 1;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  padding-left: 10rpx;
  line-height: 30rpx;
}
.bottom_qa_button_img{
  width:30rpx;
  height:30rpx;
}

.weui-media-box__title{font-size: 26rpx;}
.padding20{ padding: 20rpx 20rpx 20rpx 0 ;}
.paddingleft20{padding-left:20rpx;}
.floatleft{float:left;}
.floatright{float:right;}
.backWhite{background-color: #fff;}
.valign-middle{vertical-align: middle;}
.margin_top_20{ margin-top: 20rpx;}
.padding_top_20{ padding-top: 20rpx;}
.margin_bottom_20{margin-bottom: 20rpx;}
