<view class="page">
  <view class="backWhite margin_bottom_20 padding_top_20  padding_bottom_20">
    <view class="sf_top">
      <view bindtap="bindToQA" wx:if="true" class="sf_top_button">回复</view>
      <view bindtap="bindToCreateChat" wx:if="{{!sfItem.isShifu}}" class="sf_top_button">与他建立房间</view>
    </view>
  </view>
  <view class="backWhite margin_bottom_20 margin_top_20 padding_top_20  bg_panel_user ">
    <view class="weui-media-box_appmsg paddingleft20">
      
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg bg_panel_usercontent ">
        <view>{{sfItem.sNickName}}</view>
        <view class="color_time">{{sfItem.cdate}}
        </view>
      </view>
    </view>
    <view class="page__bd_spacing2 size28">{{sfItem.content}}
      <view wx:if="{{sfItem.ltFilesAudio}}" wx:for="{{sfItem.ltFilesAudio}}" wx:for-item="lf" bindtap="playVoice" data-talk="{{appurl+lf.fileurl}}" class="bg_panel_filelist">
        <image  class="bg_panel_filelist_file" src="/images/talk.svg" mode="aspectFit" />
      </view>
      <view wx:if="{{sfItem.ltFilesImg}}" class="bg_panel_imglist">
        <image  wx:for="{{sfItem.ltFilesImg}}"  wx:for-item="lf" bindtap="showPhoto" data-src="{{appurl+lf.fileurl}}" data-id="{{sfItem.ltFilesImg}}" class="bg_panel_imglist_img" src="{{appurl+lf.fileurl}}" mode="aspectFit" />
      </view>
    </view>
  </view>
  <view wx:if="{{isHuifu}}">
  <form bindsubmit="formSubmit">
    <view class="top_button margin_bottom_20">
      <view bindtap="bindCanelQA" class="top_button_left">取消</view>
      <view class="top_button_right">
        <button size="mini" loading="{{loading}}" disabled="{{loading}}" type="primary" formType="submit">发送</button>
      </view>
    </view>
    <view class="backWhite margin_bottom_20">
      <textarea name="content" class="input_content" placeholder="回复{{sfItem.sNickName}}..." focus="true" />
    </view>
    <view class="backWhite margin_bottom_20">
      <view class="photo_button">
        上传图片
      </view>
      <view class="content_img_list">
        <view class="content_img_tu" wx:for="{{tempimg}}">
          <image bindtap="showPhoto" data-src="{{item.url}}" class="content_img_tu_img" mode="aspectFit" src="{{item.url}}" />
          <view data-num="{{index}}" bindtap="delPhoto" class="del_view">
            <image class="del_img" mode="aspectFit" src="/images/del.svg" />
          </view>
        </view>
        <view class="content_img" wx:if="{{imgnum < 9}}" bindtap="updatePhoto">
          <image mode="aspectFit" src="/images/add.svg" />
        </view>
        <view class="line"></view>
      </view>
    </view>
    <view class="backWhite margin_bottom_20">
      <view class="photo_button">
        录音
      </view>
      <view class="talk_centent">
        <view>{{talkmsg}}</view>
        <view wx:if="{{hastalked == false}}">
          <button wx:if="{{talkStatus == false}}" size="mini" type="default" bindtap="bindTalk">
            开始录音</button>
            <button wx:if="{{talkStatus}}" size="mini" type="warn" bindtap="bindOverTalk">
            停止录音</button>
        </view>
         <view wx:if="{{hastalked}}">
          <button  size="mini" type="default" bindtap="playVoice" data-talk="{{temptalk}}">
            播放</button>
            <button size="mini" type="warn" bindtap="delVoice">
            删除</button>
        </view>
      </view>
      <view class="view_remark">录音结束前请勿进行其它操作，录音时长60秒内</view>
    </view>
  </form>
  </view>
</view>