<view class="page">
 <view class="backWhite margin_bottom_20 padding_top_20  padding_bottom_20">
    <view class="sf_top">
      <view bindtap="bindToQA" wx:if="true" class="sf_top_button">回复</view>
      <view bindtap="bindToQA" wx:if="true" class="sf_top_button">与他建立房间</view>
    </view>
  </view>
  <view class="backWhite margin_bottom_20 margin_top_20 padding_top_20  bg_panel_user ">
    <view class="weui-media-box_appmsg paddingleft20">
      <view class="bg_panel_img">
        <image class="bg_panel_userimg" src="{{icon20}}"></image>
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg bg_panel_usercontent ">
        <view>周先生</view>
         <view class="color_time">5分钟前
      </view>
      </view>
    </view>
    <view class="page__bd_spacing2 size28">17年就业指导,山东发生的发生的发生阿斯顿发生的发生发达师傅的
      <view class="bg_panel_filelist">
        <image bindtap="playVoice" data-talk="" class="bg_panel_filelist_file" src="/images/talk.svg" mode="aspectFit" /> 0`20``
      </view>
      <view class="bg_panel_imglist">
        <image bindtap="showPhoto" data-src="{{i.imgList}}" data-id="" class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
        <image class="bg_panel_imglist_img" src="{{icon60}}" mode="aspectFit" />
      </view>
    </view>
  </view>
     <form bindsubmit="formSubmit">
    <view class="qa_top_button">
      <view class="top_button_left">取消</view>
      <view class="top_button_right">
        <button size="mini" loading="{{loading}}" disabled="{{loading}}" type="primary" formType="submit">发送</button>
      </view>
    </view>
    <view class="input_view">
      <textarea name="content" class="input_content" placeholder="回复" focus="true" />
    </view>
    <view class="photo_button">
      <image src="/images/photo.svg" />
    </view>
    <view class="content_img_list">
      <view class="content_img_tu" wx:for="{{tempimg}}">
        <image bindtap="showPhoto" data-src="{{item.url}}" class="content_img_tu_img" mode="aspectFit" src="{{item.url}}" />
        <view data-num="{{index}}" bindtap="delPhoto" class="del_view">
          <image class="del_img" mode="aspectFit" src="/images/del.svg" />
        </view>
      </view>
      <view class="content_img" wx:if="{{imgnum < 9}}" bindtap="updatePhoto">
        <image mode="aspectFit" src="/images/add.svg" />
      </view>
      <view class="line"></view>
    </view>
    <view class="line"></view>
    <view class="talk-view">
      <view class="bg_panel_filelist newlist" wx:if="{{temptalk !=''}}">
        <image bindtap="playVoice" data-talk="{{temptalk}}" class="bg_panel_filelist_file" src="/images/talk.svg" mode="aspectFit" />
        <label bindtap="playVoice" data-talk="{{temptalk}}">0`20``</label>
        <image bindtap="delVoice" class="del_img2" mode="aspectFit" src="/images/del.svg" />
      </view>
      <button disabled="{{hastalked}}" type="primary" bindtouchstart="bindTalk" bindtouchcancel="bindOverTalk" bindtouchend="bindOverTalk">
        <image src="/images/mic.svg" />发送语音</button>
    </view>
  </form>
</view>
