.page{
  height: 100%;
  flex-direction: column;
  align-items: center;
}
.userinfo{
  width:100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 50%;
  padding-top: 60rpx;
}
.w_title{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
}
.w_amount{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 62rpx;
  font-weight: 400;
  letter-spacing: 0.15em;
}
.w_btn_tixian{
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.w_btn_tixian button{
  width: 80%;
  background-color: #1196db;
  color: #fff;
}
.w_desc{
  margin: 0 auto;
  padding-top: 20rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-content: center;
  text-align: left;
  color: #8a8a8a;
  font-size: 24rpx;
}
.w_desc .nav{
  color: #17abe3;
  width:300rpx;
}
.w_nav{
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 30rpx;
  color: #17abe3;
}
.sharebox {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background: #ccc;
  padding-top: 20rpx;
  height: 100%;
  opacity: 0.7;
  filter: alpha(opacity=70);
}
.info-content {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inputcontent {
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  background: #fffffe;
  padding-top: 20rpx;
  height: 40%;
  text-align: center;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 12px;
}
.section {
  width: 580rpx;
  height: 100rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.section input {
  float: left;
  border: 1px solid #14b3c7;
  border-radius: 5px;
  font-size: 26rpx;
  padding-left: 10rpx;
  height: 50rpx;
  width: 330rpx;
  text-align: left;
}

.section .input-error {
  float: left;
  border: 1px solid #f00;
  border-radius: 5px;
  font-size: 26rpx;
  padding-left: 10rpx;
  height: 50rpx;
  width: 330rpx;
  text-align: left;
}
.btn-area {
  width: 580rpx;
  display: flex;
  flex-flow: row;
}

.btn-area button {
  width: 200rpx;
  background-color: #14b3c7;
  color: #fff;
}
.input-info-bottom {
  position: absolute;
  width: 100%;
  z-index: 2100;
  top: 0;
  right: 0;
}
.input-info-icon {
  float: right;
}
.phInput {
  color: #ccc;
}