@import "/css/card.wxss";
.bannerimg {
  width: 100%;
  align-items: center;
  text-align: center;
}

.describetitle {
  width: 100%;
  align-items: center;
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.describecontent {
  font-size: 30rpx;
  display: flex;
  padding-top: 20rpx;
  line-height: 40rpx;
  text-align: left;
}

.content {
  border-top: 1px #f0f0f0 solid;
  background-color: #fff;
  margin-top: 20rpx;
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  align-items: center;
  text-align: center;
  padding-bottom: 160rpx;
}

.amountview {
  box-sizing: border-box;
  font-size: 32rpx;
  width: 100%;
  padding: 15rpx 40rpx;
  border-bottom: 1px #f0f0f0 solid;
  background-color: #fff;
  height:auto;
  display: flex;
  flex-direction: row;
}
.amountview_left{
  display: inline-block;
  box-sizing: border-box;
  flex: 10;
}
.amountview_right{
  flex: 1;
  margin: 0 auto;
  text-align:center;
  vertical-align: middle;
  border-left: 1px solid #f0f0f0;
  padding-left: 10px;
}
.amountview_right label{
  font-size: 12px;
  display: table;
  padding-left: 5px;
}
.amountview_right image{
  width:20px;
  height:20px;
}
.pTitle {
  text-align: left;
  display: table;
}

.amount {
  font-size: 32rpx;
  color: #e69138;
  display: flex;
  float: left;
}

.sharebox {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background: #ccc;
  padding-top: 20rpx;
  height: 100%;
  opacity: 0.7;
  filter: alpha(opacity=70);
}

.sharecontent {
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  background: #fffffe;
  padding-top: 20rpx;
  height: 80%;
  text-align: center;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 5px;
}

.inputcontent {
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  background: #fffffe;
  padding-top: 20rpx;
  height: 80%;
  text-align: center;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 12px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-name {
  margin-top: 10px;
  font-size: 12px;
}

.info-content {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-title {
  font-size: 18px;
  width: 100%;
  text-align: center;
}

.info-text {
  font-size: 14px;
  color: #ccc;
  text-align: left;
  line-height: 60rpx;
  padding: 10px;
}

.info-bottom {
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 40px;
  z-index: 2100;
  bottom: 0;
}
.input-info-bottom {
  position: absolute;
  width: 100%;
  z-index: 2100;
  top: 0;
  right: 0;
}

.info-bottom-lab {
  width: 100%;
  font-size: 10px;
}

.info-icon {
  display: block;
  bottom: -50px;
}
.bottomleftBtn {
  position: fixed;
  background-color: #14b3c7;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  bottom: 10px;
  overflow: hidden;
  z-index: 500;
  width: 35%;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
}
.bottomrightBtn {
  right: 0;
  position: fixed;
  background-color: #14b3c7;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  bottom: 10px;
  overflow: hidden;
  z-index: 500;
  width: 35%;
  border-top-left-radius: 18px;
  border-bottom-left-radius: 18px;
}
.shareimgbox {
  width: 300rpx;
  height: 200rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 4000;
  padding-right: 20rpx;
}

.shareImg {
  width: 200rpx;
  height: 150rpx;
  z-index: 4000;
  float: right;
}

.payedMan {
  width: 200rpx;
  font-size: 28rpx;
  color: #ccc;
  float: right;
  text-align: right;
}
.shareurlcontent {
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  padding-top: 20rpx;
  height: 400rpx;
  text-align: center;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 5px;
  font-size: 28rpx;
  line-height: 60rpx;
}

.docurl {
  font-size: 32rpx;
  color: #e69138;
  width: 600rpx;
  text-align: left;
  padding-left: 30rpx;
  float: left;
}

.url_view {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 0;
}

.url_view label {
  float: left;
  padding-left: 20rpx;
  text-align: right;
  width: 100rpx;
}

.payedtitle {
  width: 100%;
  align-items: center;
  text-align: center;
  color: #8a8a8a;
  font-size: 26rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.lj_member{
  color: #e69138;
  line-height: 20px;
  font-size: 26rpx;
margin: 0 auto;
}