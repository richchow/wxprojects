        <label class="delcommend">删除</label>
      </view>
      <view bindtap="bindComment" data-id='0' data-val="回复周师傅" class="qa_content_q">
        <label>周师傅</label>回复
        <label>王起航：不错
          <label class="delcommend">删除</label>
        </label>
      </view>
    </view>
  </view>
</view>
<view wx:if="{{iscommend}}" class="backWhite page__bd_spacing2 bottom_qa bottom_button">
  <form bindsubmit="btnSearch">
    <input class="indexInput" focus="{{iscommend}}" placeholder="{{commentval}}" confirm-type="send" bindinput="bindChange" value="{{inputValue}}" bindconfirm="btnSearch" />
  </form>
</view>