    </view>
    <view class="page__bd_spacing2 bottom_qa">
      <view class="color_time">5分钟前
        <label class="deldata">删除</label>
      </view>
      <view>
        <image class="bottom_qa_button_img" data-id='0' data-val="评论" bindtap="bindComment" src="/images/comment.svg" />
      </view>
    </view>
    <view class="qa_content">
      <view bindtap="bindComment" data-id='0'  data-val="回复王起航" class="qa_content_q">
        <label>王起航</label>：不错
        <label class="delcommend">删除</label>
      </view>
      <view bindtap="bindComment" data-id='0' data-val="回复王起航" class="qa_content_q">
