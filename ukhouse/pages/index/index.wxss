.page{
  padding-bottom: 10px;
}
.slide-banner{
  height: 180px;
}
.slide-view {
  width: 100%;
  height: 180px;
  text-align: center;
  line-height: 180px;
}

.slide-image {
  width: 100%;
  height: 180px;
  display: inline-block;
  z-index: -100;
}

.slide-lab {
  z-index: 100;
  position: absolute;
  width: 100%;
  height: 180px;
  text-align: center;
  line-height: 180px;
  vertical-align: middle;
  font-size: 30px;
  color: #fff;
  font-weight: 500;
}
.slide-tags{
  height: 50px;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px #e5e5e5 solid;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  box-shadow: 0px 5px  13px #888 ;
  text-align: center;
}
.slide-tags_tag{
  flex: 1;
  flex-direction: column;
}
.slide-tags_img{
  width:30px;
  height:30px;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
  text-align: center;
}
.slide-tags_checked{
  box-shadow: 4px 4px 10px #888;
}
.slide-tags_lab{
  display: inline-block;
  font-size: 12px;
  width:auto;
}
.content-view {
  margin: 20px 0;
  border: 1px #e5e5e5 solid;
  box-shadow: 0px 5px 13px #888 ;
  border-radius: 5px;
}

.content-view-box {
  display: flex;
  align-items: center;
  padding: 5px;
  position: relative;
   border-top: 1px #dbdbdb solid;
}

.content-panel_hd {
  padding: 14px 5px 10px;
  color: #999;
  font-size: 12px;
  position: relative;
}
.content-panel_hd_lab{
padding-left: 5px;
  border-left: 3px solid #003399 ;
  color: #003399;
}

.content-view-box_hd {
  margin-right: 0.8em;
  width: 100px;
  height: 66px;
  line-height: 66px;
  text-align: center;
}


.content-view-box_thumb {
  width: 100%;
  max-height: 100%;
  vertical-align: top;
  border-radius: 3px;
}

.content-view-box_bd {
  -webkit-box-flex: 1;
  flex: 1;
  min-width: 0;
}

.content-view-box_title {
  font-weight: 400;
  font-size: 14px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
/*  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;*/
}

.content-view-box_desc {
  color: #999;
  font-size: 13px;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.team-swiper{
  height: 100px;
}
.team-view-box {
  display: flex;
  align-items: center;
  padding: 15px;
  position: relative;
   border-top: 1px #dbdbdb solid;
}
.team-view-box_hd {
  margin-right: 0.8em;
  width: 71px;
  height: 99px;
  line-height: 160px;
  text-align: center;
}
.center{
  text-align: center;
}
.ft {
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0  ;
  border-color: #999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 12px;
}
.margin-bottom{
  margin-bottom: 0;
}
