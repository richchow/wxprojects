.page{
  padding-bottom: 50px;
}
.slide-banner{
  height: 180px;
  box-shadow: 0px 5px  13px #888 ;

  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.slide-view {
  width: 100%;
  height: 180px;

  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.slide-image {
  width: 100%;
  height: 180px;
  display: inline-block;
  z-index: -100;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.slide-lab {
  bottom:10px;
  right:10px;
  height: 20px;
  position: absolute;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border: 1px solid #fff;
  padding: 3px 10px;
}
.slide-tags{
  height: 50px;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px #e5e5e5 solid;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  box-shadow: 0px 5px  13px #888 ;
  text-align: center;
}
.slide-tags_tag{
  flex: 1;
  flex-direction: column;
}
.slide-tags_img{
  width:30px;
  height:30px;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
  text-align: center;
}
.slide-tags_checked{
  box-shadow: 2px 2px 13px #888;
}
.slide-tags_lab{
  display: inline-block;
  font-size: 12px;
  width:auto;
}
.content-view {
  margin: 20px 0;
  border: 1px #e5e5e5 solid;
  border-radius: 5px;
  box-shadow: 0px 5px 13px #888 ;
}

.content-view-box {
  display: flex;
  align-items: center;
  padding: 15px;
  position: relative;
   border-top: 1px #dbdbdb solid;
}

.content-panel_hd {
  padding: 10px;
  font-size: 14px;
  position: relative;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
}
.content-panel_hd_lab{
padding-left: 5px;
  border-left: 3px solid #003399 ;
  color: #003399;
}
.content-panel_hd_img{
  padding-right: 10px;
}
.content-panel_hd_title{
  line-height: 24px;
  vertical-align: middle;
  margin: auto 0;
}
.content-view-box_hd {
  margin-right: 0.8em;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.content-view-box_thumb {
  width: 100%;
  max-height: 100%;
  vertical-align: top;
}

.content-view-box_bd {
  -webkit-box-flex: 1;
  flex: 1;
  min-width: 0;
}

.content-view-box_title {
  font-weight: 400;
  font-size: 17px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.content-view-box_desc {
  color: #000;
  font-size: 13px;
  overflow: hidden;
}
.bottomleftBtn {
  position: fixed;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  bottom: 10px;
  overflow: hidden;
  z-index: 500;
  width: 35%;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
  border-top: 1px #dbdbdb solid;
  border-right: 1px #dbdbdb solid;
  border-bottom: 1px #dbdbdb solid;
}
.bottomrightBtn {
  right: 0;
  position: fixed;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  bottom: 10px;
  overflow: hidden;
  z-index: 500;
  width: 35%;
  border-top-left-radius: 18px;
  border-bottom-left-radius: 18px;
  border-top: 1px #dbdbdb solid;
  border-left: 1px #dbdbdb solid;
  border-bottom: 1px #dbdbdb solid;
}