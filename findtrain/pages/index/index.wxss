.bottomleftBtn {
  position: fixed;
  background-color: #2e2e30;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  bottom: 10px;
  overflow: hidden;
  z-index: 500;
  width: 35%;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
}



.bottomBtn {
  position: fixed;
  background-color: #000;
  line-height: 95rpx;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  bottom: 0px;
  overflow: hidden;
  z-index: 500;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
  right:0;
}
.shareimgbox {
  width: 300rpx;
  height: 200rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 4000;
  padding-right: 20rpx;
}

.shareImg {
  width: 200rpx;
  height: 150rpx;
  z-index: 4000;
  float: right;
}
.sharebox {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 5000;
  background: #000;
  padding-top: 20rpx;
  height: 100%;
  opacity: 0.7;
  filter: alpha(opacity=70);
}
.v_m_modal {
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 5000;
  background: #fffffe;
  padding-top: 16px;
  display:table;
  text-align: center;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 5px;
  border: #cdcdcd 1px solid;
}

.v_m_modal image {
  width: 90%;
  height: auto;
  margin: 0 auto;
  border: #cdcdcd 1px solid;
}
.v_m_describe{
  font-size: 14px;
  color: #707070;
  width: 90%;
  margin: auto;
}
.v_m_bottom{
  border-top: #cdcdcd 1px solid;
  font-size: 20px;
  color: #14b3c7;
  font-weight: 500;
  margin-top: 10px;
  height: 50px;
  line-height: 50px;
}